{
  "compilerOptions": {
    "target": "ES6",                     // 변환할 JavaScript의 버전
    "module": "ESNext",                  // 사용하는 모듈 시스템 (ESNext 또는 CommonJS)
    "strict": true,                      // 엄격한 타입 검사 활성화
    "esModuleInterop": true,             // ES6 모듈과의 호환성
    "moduleResolution": "node",          // 모듈 탐색 방식
    "baseUrl": "./",                     // 기준 경로
    "paths": {                           // 모듈 경로 별칭 설정
      "@/*": ["src/*"]
    },
    "outDir": "./dist",                  // 컴파일된 JavaScript 출력 폴더
    "rootDir": "./src",                  // TypeScript 파일의 기준 폴더
    "forceConsistentCasingInFileNames": true,  // 파일 이름 대소문자 일치 강제
    "skipLibCheck": true                 // 라이브러리 검사 생략
  },
  "include": ["src/**/*"],               // 컴파일 포함 파일
  "exclude": ["node_modules", "dist"]    // 컴파일 제외 파일
}
